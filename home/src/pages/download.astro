<html>
  <head>
    <meta charset="utf-8" />
    <title>Downloading Flakes...</title>
    <script defer data-domain="flakes.ai" src="https://traffic.flakes.ai/js/script.js"></script>
    <style>
      body {
        font-family: system-ui, sans-serif;
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        margin: 0;
        background: #0a0a0a;
        color: #fff;
      }
      .container {
        text-align: center;
      }
      a {
        color: #60a5fa;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <p>Fetching latest release...</p>
      <p><a href="https://github.com/chagel/flakes/releases/latest">Click here if download doesn't start</a></p>
    </div>
    <script>
      // Plausible queue pattern for when script isn't loaded yet
      window.plausible = window.plausible || function() {
        (window.plausible.q = window.plausible.q || []).push(arguments)
      };

      async function redirectToLatest() {
        try {
          const response = await fetch('https://api.github.com/repos/chagel/flakes/releases/latest');
          const release = await response.json();
          const dmgAsset = release.assets.find(a => a.name.endsWith('.dmg'));
          if (dmgAsset) {
            const downloadUrl = dmgAsset.browser_download_url;
            let redirected = false;
            const redirect = () => {
              if (!redirected) {
                redirected = true;
                window.location.href = downloadUrl;
              }
            };
            // Track download event with callback to ensure it's sent before redirect
            plausible('Download', {
              props: { version: release.tag_name },
              callback: redirect
            });
            // Fallback redirect if callback doesn't fire within 1 second
            setTimeout(redirect, 1000);
          } else {
            window.location.href = 'https://github.com/chagel/flakes/releases/latest';
          }
        } catch (e) {
          window.location.href = 'https://github.com/chagel/flakes/releases/latest';
        }
      }
      redirectToLatest();
    </script>
  </body>
</html>
